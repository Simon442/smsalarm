<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ax.ha.it.smsalarm"
    android:versionCode="13"
    android:versionName="2.2.5">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" />
    <uses-feature android:name="android.hardware.telephony" android:required="true"/>
    <uses-feature android:name="android.software.app_widgets" android:required="false"/>
    
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />  
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    
    <supports-screens android:largeScreens="true" android:xlargeScreens="true" />
    
    <application android:label="@string/APP_NAME"
        android:enabled="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" android:allowBackup="false" android:name="UpdateHandler">
        <activity android:name=".Splash" android:label="@string/APP_NAME" android:noHistory="true" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />            
        	</intent-filter>       	
       	</activity>
       	<activity android:name=".SmsSettingsActivity" android:noHistory="true" android:label="@string/TITLE_SMS_SETTINGS" />
        <activity android:name=".SmsAlarm" android:noHistory="true" android:label="@string/APP_NAME">
            <intent-filter>
 				<!-- Future intents and services for this activity goes here -->
            </intent-filter>
        </activity>       
        <activity android:name=".AcknowledgeHandler" android:noHistory="true" android:screenOrientation="portrait" android:label="@string/APP_NAME">
        </activity>        
        <receiver android:name=".SmsReceiver" android:enabled="true" android:exported="true">
         	<intent-filter android:priority="999"> 
         		<action android:name="android.provider.Telephony.SMS_RECEIVED"/> 
         	</intent-filter> 
        </receiver>
        <receiver android:name=".WidgetProvider" >
            <intent-filter >
               	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
           	</intent-filter>
           	<meta-data android:name="android.appwidget.provider"
               	android:resource="@xml/widget_configuration" />
       	</receiver>      
        <service android:name=".NotificationHelper"></service>   
        <service android:name=".AcknowledgeNotificationHelper"></service>   
    </application>    
</manifest>