<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/soundSettings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/TITLE_SOUND_SETTINGS"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/soundSettingsInfo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/soundSettings_tv"
            android:layout_below="@+id/soundSettings_tv"
            android:layout_marginRight="5dp"
            android:text="@string/INFO_SOUND_SETTINGS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/alarmTypeSpinnerTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/soundSettingsInfo_tv"
            android:layout_below="@id/soundSettingsInfo_tv"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/TITLE_TONE_SPINNER"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/alarmTypeSpinner_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/alarmTypeSpinnerTitle_tv"
            android:layout_below="@id/alarmTypeSpinnerTitle_tv"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/alarmSignalTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/alarmTypeSpinner_sp"
            android:layout_below="@+id/alarmTypeSpinner_sp"
            android:layout_marginRight="5dp"
            android:text="@string/TITLE_ALARM_SIGNAL"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/alarmSignal_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/alarmSignalTitle_tv"
            android:layout_alignRight="@id/soundSettingsInfo_tv"
            android:layout_below="@id/alarmSignalTitle_tv"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/editAlarmSignal_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/alarmSignal_et"
            android:layout_below="@+id/alarmSignal_et"
            android:layout_marginTop="2dp"
            android:text="@string/EDIT_ALARM_SIGNAL" />

        <Button
            android:id="@+id/listenAlarmSignal_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarmSignal_et"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/editAlarmSignal_btn"
            android:text="@string/LISTEN_ALARM_SIGNAL" />

        <CheckBox
            android:id="@+id/useSysSoundSettings_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/editAlarmSignal_btn"
            android:layout_below="@id/listenAlarmSignal_btn"
            android:layout_marginRight="5dp"
            android:text="@string/TITLE_USE_OS_SOUND_SETTINGS" />

        <TextView
            android:id="@+id/useSysSoundSettingsHint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/useSysSoundSettings_chk"
            android:layout_below="@+id/useSysSoundSettings_chk"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-9dp"
            android:text="@string/INFO_USE_OS_SOUND_SETTINGS"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/playAlarmSignalTwiceSetting_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/useSysSoundSettings_chk"
            android:layout_below="@+id/useSysSoundSettingsHint_tv"
            android:layout_marginRight="5dp"
            android:text="@string/TITLE_PLAY_TONE_TWICE_SETTING" />

        <TextView
            android:id="@+id/playAlarmSignalTwiceSettingHint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/playAlarmSignalTwiceSetting_chk"
            android:layout_below="@+id/playAlarmSignalTwiceSetting_chk"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="-9dp"
            android:text="@string/INFO_PLAY_TONE_TWICE_SETTING"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</ScrollView>